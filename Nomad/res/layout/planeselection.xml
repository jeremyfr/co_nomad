<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@color/background1_light"
    android:padding="@dimen/activity_margin"
    android:orientation="vertical" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/aircraftid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color = "@color/background1_dark"
            android:textSize="@dimen/font_size_3"
            android:text="TextView" />

        <EditText
            android:id="@+id/searchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"   />

        <Button
            android:id="@+id/buttonsearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="578dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/titrelistplane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
           		android:color = "@color/background1_dark"
            	android:textSize="@dimen/font_size_3"
                android:text="Plane List" />

            <ListView
                android:id="@+id/listViewPlanes"
                android:layout_width="200dp"
                android:layout_height="match_parent" >
            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textmsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
           		android:color = "@color/background1_dark"
            	android:textSize="@dimen/font_size_3"
                android:text="MSN" />

            <Spinner
                android:id="@+id/spinnerMSN"
                android:layout_width="475dp"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

        <TextView
            android:id="@+id/textor"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            
           		android:color = "@color/background1_dark"
            	android:textSize="@dimen/font_size_3"
            android:text="or" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textfsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                
           		android:color = "@color/background1_dark"
            	android:textSize="@dimen/font_size_3"
                android:text="FSN" />

            <Spinner
                android:id="@+id/spinnerFSN"
                android:layout_width="475dp"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
